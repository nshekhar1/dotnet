@model ReceptionProcam.Areas.Area.Models.clsAssetIssueDetails



<script type="text/javascript">
    $(document).ready(function () {
        $('#hdnSession').attr("value", '@TempData["CapturedImageTemp"]');
    });
</script>
@section scripts
{
    <link href="~/Scripts/select2.min.css" rel="stylesheet" />
    <script src="~/Scripts/select2.min.js"></script>
    <script src="~/Scripts/visitor.js"></script>
    @Scripts.Render("~/bundles/jqueryval")
}


<script type="text/javascript">
    $(function () {
        $(".js-example-placeholder-multiple").select2({
            placeholder: "Select",
            allowClear: true
        });
    });
</script>
@using (Html.BeginForm("AssetIssue", "AssetManagement", new { }))
{
    @Html.AntiForgeryToken()
    <div class="m-portlet">
        <div class="m-portlet__head">
            <div class="m-portlet__head-caption">
                <div class="m-portlet__head-title">
                    <span class="m-portlet__head-icon m--hide">
                        <i class="la la-gear"></i>
                    </span>
                    <h3 class="m-portlet__head-text">
                        Assets Issue
                    </h3>
                </div>

            </div>
        </div>
        <!--begin::Form-->
        <div class="m-portlet__body">

            <div class="form-group m-form__group row">

                <div class="col-lg-6">
                    @Html.LabelFor(model => model.EmpId, htmlAttributes: new { })<span class="text-danger">*</span>
                    @*     @Html.DropDownListFor(m => m.EmpId, ViewBag.GetAllEmployee as SelectList, new { Id = "ddlEmployee", autocomplete = "off", @class = "form-control m-input" })*@

                    @Html.DropDownListFor(model => model.EmpId, new List<SelectListItem> { new SelectListItem { Text = "Kavan M", Value = "001" }, new SelectListItem { Text = "Nilambari S", Value = "002" }, new SelectListItem { Text = "Suraj M", Value = "003" } }, new { Id = "ddlEmployee", autocomplete = "off", @class = "form-control m-input" })
                    <p class="help-block">@Html.ValidationMessageFor(m => m.EmpId, "", new { @class = "text-danger" })</p>
                </div>

            </div>
            <div class="form-group m-form__group row">
                <div class="col-lg-6">
                    @Html.LabelFor(model => model.AssetId, htmlAttributes: new { })<span class="text-danger">*</span><br />
                    @Html.ListBoxFor(model => model.AssetId, ViewBag.AllAssets as SelectList, new { Id = "lbAssets", @class = "form-control js-example-placeholder-multiple" })
                </div>
            </div>

            @*@Html.HiddenFor(model => model.TimeIn, htmlAttributes: new { @Id = "hfTimeIn" })*@
        </div>
        <div class="m-portlet__foot m-portlet__no-border m-portlet__foot--fit">
            <div class="m-form__actions m-form__actions--solid">
                <div class="row">
                    <div class="col-lg-4"></div>
                    <div class="col-lg-8">
                        <button type="submit" class="btn btn-primary" id="SubmitBtn">
                            Submit
                        </button>
                        <button type="reset" class="btn btn-secondary" onclick="@("window.location.href='" + @Url.Action("AssetIssue", "AssetManagement") + "'");">
                            Cancel
                        </button>
                    </div>
                </div>
            </div>
        </div>
        <br />
    </div>
}
